generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id             Int           @id @default(autoincrement())
  email          String        @unique
  name           String?
  image          String?
  githubId       String?       @unique
  githubUsername String?
  registrations  Registration[] // Websites this user is registered in
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Admin {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  fullname  String
  websites  Website[] // Add this relation
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
model Website {
  id          Int           @id @default(autoincrement())
  slug        String        @unique  // Unique URL identifier (e.g., "techfest-2024")
  title       String                 // Website/Hackathon title
  description String?                // Optional description
  
  // Website builder data stored as JSON
  websiteData Json                   // Stores all the builder configuration
  
  // Ownership & permissions
  adminId     Int                    // Foreign key to Admin
  admin       Admin         @relation(fields: [adminId], references: [id], onDelete: Cascade)
  
  // User registrations
  registrations Registration[]       // Users registered in this website
  
  // Status management
  status      WebsiteStatus @default(DRAFT)  // DRAFT or PUBLISHED
  
  // Publication info
  publishedAt DateTime?              // When it was published
  viewCount   Int           @default(0)  // Track views (optional)
  
  // Timestamps
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  @@index([slug])
  @@index([adminId])
  @@index([status])
}

enum WebsiteStatus {
  DRAFT
  PUBLISHED
}

// Junction table for User-Website many-to-many relationship
model Registration {
  id          Int      @id @default(autoincrement())
  userId      Int
  websiteId   Int
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  website     Website  @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  
  // Registration metadata
  registeredAt DateTime @default(now())
  status      RegistrationStatus @default(PENDING)
  
  // Make sure a user can only register once per website
  @@unique([userId, websiteId])
  @@index([userId])
  @@index([websiteId])
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}